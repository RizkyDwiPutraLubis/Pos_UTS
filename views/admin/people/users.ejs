<div class="row">
    <div class="col-lg-12">
        <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
            <div>
                <h4 class="mb-3">User List</h4>
                
            </div>
           
        </div>
    </div>
    <div class="col-lg-12">
        <div class="table-responsive rounded mb-3">
        <table class="data-table table mb-0 tbl-server-info">
            <thead class="bg-white text-uppercase">
                <tr class="ligth ligth-data">
                    <th>
                        <div class="checkbox d-inline-block">
                            <input type="checkbox" class="checkbox-input" id="checkbox1">
                            <label for="checkbox1" class="mb-0"></label>
                        </div>
                    </th>
                    <th>Fullname</th>
                    <th>Email</th>
                    <!-- <th>Address</th>
                    <th>Date of birth</th>
                    <th>Image</th> -->
                    <th>Role Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="ligth-body">
             
                <% if(data.users.length !== 0 ){ %>
                    
                      <% for (let i = 0; i < data.users.length; i++) { %>
                        <tr>
                          <td>
                            <div class="checkbox d-inline-block">
                              <input type="checkbox" class="checkbox-input" id="checkbox<%= i + 3 %>"> <label for="checkbox<%= i + 3 %>" class="mb-0"></label>
                            </div>
                          </td>
                          <td><%= data.users[i].fullname %></td>
                          <td><%= data.users[i].email %></td> 
                          <!-- <td><%= data.users[i].address || "" %></td>
                           <td><%= data.users[i].tgl_lahir || "" %></td>  -->
                            <!-- <td><%= data.users[i].image || "" %></td>  -->
                            <% if (data.users[i].Role) { %>
                                <td><%= data.users[i].Role.role_name.toUpperCase() %></td>
                              <% } else { %>
                                <td>No Role Assigned</td>
                              <% } %>
                          <td>
                            <div class="d-flex align-items-center list-action">
                              <!-- <a class="badge badge-info mr-2" data-toggle="tooltip" data-placement="top" title="View" data-original-title="View" href="#"><i class="ri-eye-line mr-0"></i></a>
                              <a class="badge bg-success mr-2" data-toggle="tooltip" data-placement="top" title="Edit" data-original-title="Edit" href="#"><i class="ri-pencil-line mr-0"></i></a>
                              <a class="badge bg-warning mr-2" data-toggle="tooltip" data-placement="top" title="Delete" data-original-title="Delete" href="#"><i class="ri-delete-bin-line mr-0"></i></a> -->
                            </div>
                          </td>
                        </tr>
                      <% } %>
                  
                  <% } else { %>
                    <p>No users found.</p>
                  <% } %>
             
                
            </tbody>
        </table>
        </div>
    </div>
</div>